<html>
<head>
  <title>LIT Goals</title>

  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link rel="stylesheet" href="/litgoals/assets/stylesheets/main.css" />
  <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600,600italic,700,700italic,800,800italic' rel='stylesheet' type='text/css' />
  <link href='https://fonts.googleapis.com/css?family=PT+Serif:400,400italic,700,700italic' rel='stylesheet' type='text/css'>

  <script src="https://code.jquery.com/jquery-3.1.0.min.js" integrity="sha256-cCueBR6CsyA4/9szpPfrX3s49M9vUU5BgtiJj06wt/s=" crossorigin="anonymous"></script>
  <script src="/litgoals/assets/javascript/selectize.js"></script>
  <script src="/litgoals/assets/javascript/list.js"></script>
  <script src="/litgoals/assets/javascript/underscore-min.js"></script>


</head>
<body class="site-min-width">

    <% if flash[:error_msg] %>
      <div class="site-message site-message-warning">
        <div class="container">
          <h3>Please check:</h3>
          <% Array(flash[:error_msg]).flatten.each do |x| %>
            <div><%= x %></div>
          <% end %>
        </div>
      </div>
    <% end %>

    <% if flash[:goal_added_msg] %>
      <div class="site-message site-message-info">
        <div class="container">
          <%= flash[:goal_added_msg] %>
        </div>
      </div>
    <% end %>

    <header class="site-header">
      <div class="container container-space-between align-center">
        <ul class="logo-item-list">
          <li class="logo-block-m">
            <a href="http://umich.edu" class="logo-link">
              <img src="data:image/png;base64," alt="Go to the University of Michigan Library homepage">
            </a>
          </li>
          <li class="logo-library">
            <a href="http://lib.umich.edu">Library</a>
          </li>
          <li class="logo-site-title">
            <a href="/">LIT Goals</a>
          </li>
        </ul>

        <nav class="navigation">
          <ul class="navigation-list">
            <li>
              <a href="/litgoals/create">Create</a>
            </li>
            <li>
              <% #require 'pry'; binding.pry %>
              <a href="<%= current_fiscal_year.goals_url%>">FY Goals</a>
            </li>
            <li>
              <a href="/litgoals/goals/">Archive</a>
            </li>
            <li>
              <a href="https://weblogin.umich.edu/cgi-bin/logout?http://www.lib.umich.edu">Log out, <%= user.uniqname %></a>
            </li>
          </ul>
        </nav>
      </div>
    </header>

    <main>
      <%= yield %>
    </main>

    <footer class="site-footer">
      <div class="container">
        <h2 class="no-spacing-top">Library Information Technology Goals</h2>
        <p>
          Created by M-Library LIT to help LIT understand and track the big picture of the division.
        </p>
      </div>
    </footer>


  </body>
</html>
